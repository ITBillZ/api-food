<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.itbill.mapper.FoodMapper">
    <resultMap id="foodResultMap" type="Food">
        <result column="food_id" property="id"/>
        <result column="food_name" property="name"/>
        <result column="food_cate" property="cate"/>
        <result column="food_manufacturer" property="manufacturer"/>
        <result column="food_prod_date" property="prodDate"/>
        <result column="food_img" property="img"/>

    </resultMap>
    <select id="selectAll" resultMap="foodResultMap">
        select * from foods_detail;
    </select>
    <select id="selectById" resultMap="foodResultMap">
        select * from foods_detail where food_id = #{id};
    </select>
</mapper>